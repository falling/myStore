<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="action" extends="struts-default">
        <action name="login" class="action.LoginAction" method="execute">
            <result name="admin" type="redirectAction">loadGoods</result>
            <result name="customer">main.jsp</result>
            <result name="error">login.jsp</result>
        </action>

        <action name="loadGoods" class="action.GoodsLoadAction" method="execute">
            <result name="success">admin_good.jsp</result>
        </action>

        <action name="updateGoods" class="action.GoodsUpdateAction" method="execute">
            <result name="success">success.jsp</result>
        </action>

        <action name="addGoods" class="action.GoodsAddAction" method="execute">
            <result name="success">success.jsp</result>
        </action>
    </package>
</struts>